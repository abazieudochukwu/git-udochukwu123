<h6>DASHBOARD</h6>
<h3>WELCOME {{name}}</h3>
<p>Here are your stories  </p>
{{#if stories}}
<table class="stripped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each stories}}
        <tr>
             <td><a href="/stories/{{_id}}">{{title}}</a></td>
             <td>{{formatDate createdAt  'MMMM Do YYY, h:mm:ss a'}}</td>
             <td><span class="dash-status">{{status}}</span></td>
             <td>
                 <form  action=""  method="">
                     <button type="submit"><i></i></button> 
                 </form>
             </td>
        </tr>
        {{/each}}
    </tbody>

</table>

{{else}}
<p>you have not created any stories </p>
{{/if}}