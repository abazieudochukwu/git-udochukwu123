<h3>Stories</h3>
<div class ="row">
    
    {{#each   stories}}
 <div class="col s12 m4">
     <div class="card">
            <div class="card-image">
             {{!-- todo: editIcon --}}
             {{{editIcon user ../user  _id}}}
            </div>
             <div class="card-content center-align">      
                 <h5>
                     {{title}}
                 </h5>
                <p>{{stripNonebreakSpaces  (stripTags  (truncate body 150))}}</p>
                <br>
                    <div class="chip small">
                        <img  src="{{user.image}}" alt="user image" >
                        <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                
                    </div>
             </div>
             <div class="card-action center-align">
                 <a href="/stories/{{_id}}" class="btn grey">Read More</a>
             </div>
         
     </div>
 </div>
    {{else}}
  <p>Sorry there are no stories Available at the moment  </p>
    {{/each}}
</div> 